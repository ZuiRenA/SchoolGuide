<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".guide.SelectDorActivity">

    <include layout="@layout/base_toolbar" android:id="@+id/include3"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerSelectDor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/include3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewSelectDor"/>

    <TextView
            android:id="@+id/textViewSelectDor"
            android:gravity="center"
            android:text="@string/assign"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/select_dor"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>