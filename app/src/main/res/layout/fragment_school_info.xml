<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".admin.SchoolInfoFragment">

    <include layout="@layout/base_toolbar" android:id="@+id/include6"/>

    <EditText
            android:id="@+id/schoolTableName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/change_password_edit_three"
            android:gravity="center"
            android:enabled="false"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/include6"/>

    <EditText
            android:id="@+id/schoolTableAddress"
            android:layout_width="0dp"
            android:background="@drawable/change_password_edit_three"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="@+id/schoolTableName"
            app:layout_constraintEnd_toEndOf="@+id/schoolTableName"
            app:layout_constraintTop_toBottomOf="@+id/schoolTableName" android:layout_marginTop="15dp"/>
    <EditText
            android:id="@+id/schoolTableIntroduce"
            android:background="@drawable/change_password_edit_three"
            android:textSize="15sp"
            android:enabled="false"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/schoolTableAddress"
            app:layout_constraintEnd_toEndOf="@+id/schoolTableAddress"
            app:layout_constraintTop_toBottomOf="@+id/schoolTableAddress" android:layout_marginTop="20dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/schoolTableAssign"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/light_blue"
            app:rippleColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"/>
</android.support.constraint.ConstraintLayout>