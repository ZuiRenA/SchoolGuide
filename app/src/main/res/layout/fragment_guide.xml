<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshGuide"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".main.GuideFragment">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/guidePersonBG"
                        android:background="@drawable/guide_person_bg"
                        android:layout_width="0dp"
                        android:layout_height="200dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="15dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="15dp" android:layout_marginTop="30dp"
                        app:layout_constraintTop_toTopOf="parent"/>


                <ImageView
                        android:id="@+id/guideAvatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintStart_toStartOf="@+id/guidePersonBG" android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="@+id/guidePersonBG"/>

                <TextView
                        android:id="@+id/guideName"
                        android:textSize="15sp"
                        android:text="@string/null_content"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/guideAvatar" android:layout_marginStart="15dp"
                        app:layout_constraintTop_toTopOf="@+id/guideAvatar" android:layout_marginTop="5dp"/>

                <TextView
                        android:id="@+id/guideId"
                        android:text="@string/null_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/guideName"
                        app:layout_constraintTop_toBottomOf="@+id/guideName" android:layout_marginTop="5dp"/>

                <ImageView
                        android:id="@+id/guideIconYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/guideYes"
                        app:layout_constraintEnd_toEndOf="@+id/guideYes" android:layout_marginBottom="3dp"
                        app:layout_constraintBottom_toTopOf="@+id/guideYes"/>

                <TextView
                        android:id="@+id/guideYes"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/guidePersonBG"
                        app:layout_constraintEnd_toEndOf="@+id/guidePersonBG" android:layout_marginEnd="20dp"/>

                <TextView
                        android:id="@+id/guideStatusText"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/guideAvatar"
                        app:layout_constraintBottom_toBottomOf="@+id/guideYes"
                />

                <ImageView
                        android:id="@+id/guideLine1"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        tools:layout_editor_absoluteX="0dp" android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/guidePersonBG"/>

                <ImageButton
                        android:id="@+id/guidePersonData"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toBottomOf="@+id/guideLine1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:text="@string/person_info"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/guidePersonData" android:layout_marginStart="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/guideLine1" android:layout_marginTop="8dp"
                        android:id="@+id/textView"/>
                <ImageView
                        android:src="@drawable/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/guideLine1"
                        app:layout_constraintBottom_toBottomOf="@+id/guidePersonData"
                        app:layout_constraintEnd_toEndOf="@+id/guidePersonData" android:layout_marginEnd="15dp"
                        android:id="@+id/imageView8"/>
                <TextView
                        android:text="@string/guide_person"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/textView"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
                        android:id="@+id/textView2"/>

                <ImageView
                        android:id="@+id/guideLine2"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        app:layout_constraintTop_toBottomOf="@+id/guidePersonData"
                        app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"/>

                <ImageButton
                        android:id="@+id/guideUpload"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toBottomOf="@+id/guideLine2"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
                <ImageView
                        android:src="@drawable/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@+id/guideUpload" android:layout_marginEnd="15dp"
                        app:layout_constraintBottom_toBottomOf="@+id/guideUpload" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@+id/guideUpload" android:layout_marginBottom="8dp"
                        android:id="@+id/imageView7"/>
                <TextView
                        android:text="@string/upload_info"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/guideUpload" android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideUpload"
                        android:id="@+id/textView3"/>
                <TextView
                        android:text="@string/guide_upload"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/textView3" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"/>

                <ImageView
                        android:id="@+id/guideLine3"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        app:layout_constraintTop_toBottomOf="@+id/guideUpload"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                        android:background="@color/more_light_white"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/guideLine3"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_text_view_color"
                        app:layout_constraintTop_toTopOf="@+id/guidePersonData"
                        app:layout_constraintBottom_toTopOf="@+id/guideUpload"
                        app:layout_constraintEnd_toStartOf="@+id/imageView8" android:layout_marginEnd="5dp"
                        android:id="@+id/guidePersonStatus"/>
                <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_text_view_color"
                        app:layout_constraintTop_toBottomOf="@+id/guideLine2"
                        app:layout_constraintEnd_toStartOf="@+id/imageView7"
                        app:layout_constraintBottom_toTopOf="@+id/guideLine3" android:layout_marginEnd="5dp"
                        android:id="@+id/guideIdStatus"/>


            </android.support.constraint.ConstraintLayout>
        </FrameLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</layout>