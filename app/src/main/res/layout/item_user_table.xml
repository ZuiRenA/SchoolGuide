<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/userTableGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg">

    <ImageView
            android:id="@+id/userPlaceImg"
            android:layout_width="match_parent"
            android:layout_height="50dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/userTableName"
            android:textSize="14sp"
            android:text="121221lk"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/userPlaceImg"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/userTableContent"/>

    <TextView
            android:id="@+id/userTablePhoneNumber"
            android:textSize="14sp"
            android:text="121221lk"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/userPlaceImg"
            app:layout_constraintTop_toTopOf="@+id/userPlaceImg"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/userTableContent"
            android:layout_width="match_parent"
            android:layout_height="200dp" tools:layout_editor_absoluteX="-44dp"
            app:layout_constraintTop_toBottomOf="@+id/userPlaceImg">

        <ImageView
                android:id="@+id/userLine1"
                android:background="@color/change_password_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/userSchool"
                android:text="121123zxzx"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"/>

        <TextView
                android:id="@+id/userCollege"
                android:text="121123zxzx"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/userIdCard"
                android:text="121123zxzx"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/userSchool"
                app:layout_constraintTop_toBottomOf="@+id/userSchool" android:layout_marginTop="15dp"/>

        <TextView
                android:id="@+id/userDor"
                android:text="121123zxzx"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/userIdCard"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@+id/userIdCard"/>

        <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"/>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>