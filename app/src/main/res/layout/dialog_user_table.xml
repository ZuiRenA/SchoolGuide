<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:background="@color/dialog_bg_color"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/bigDick"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/dialogUserNick"
            app:layout_constraintEnd_toEndOf="@+id/dialogUserNick"
            app:layout_constraintBottom_toTopOf="@+id/dialogUserNick"/>

    <EditText
            android:id="@+id/dialogUserNick"
            android:background="@drawable/change_password_edit_one"
            android:layout_width="0dp"
            android:hint="@string/user_nickname"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp" android:layout_marginEnd="15dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/testBtn"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:text="@string/assign"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp" android:layout_marginEnd="15dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>